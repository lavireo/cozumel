{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "inlineSources": true,
    "sourceMap": true,
    "pretty": true,
    "strict": true,
    "outDir": "./bin"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "bin",
    "node_modules"
  ],
  "compileOnSave": true
}
